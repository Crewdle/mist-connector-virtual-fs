{
  "compilerOptions": {
    /* Language and Environment */
    "target": "esnext",
    "types": ["node"],

    /* Modules */
    "module": "esnext",
    "moduleResolution": "Node",
    "baseUrl": "src/",

    /* Emit */
    "declaration": true,
    "outDir": "./dist/types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src"],
}
